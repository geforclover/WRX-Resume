/**index.wxss**/
.container {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-color: rgba(249,206,0,1);
}

@keyframes reduceHeight {
  from { 
    height: 100vh;
    background: linear-gradient(to bottom, rgba(9,25,79,1) 20%,rgba(146,104,173,1) 100%);
    box-shadow: 0 1px 2px rgba(146,104,173,0.3);
    border-bottom-left-radius: 0%;
    border-bottom-right-radius: 0%;
  }
}

.container-board {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 25vh;
  background: linear-gradient(to bottom, rgba(9,25,79,1) 0%,rgba(9,25,79,1) 100%);
  box-shadow: 0 1px 2px rgba(249,206,0,1);
  /* animation: reduceHeight 2s steps(120, end); */
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
}

.container-line {
  margin: 0 auto;
  width: 1vw;
  height: 7vh;
  background-color: rgba(9,25,79,1);
}

.container-circle {
  margin: 0 auto;
  width: 3vw;
  height: 3vw;
  border: 1vw solid rgba(9,25,79,1);
  border-radius: 50%;
}

.container-title {
  font-size: 80rpx;
  color: rgba(255, 255, 255, 0.2);
}

.container-float-title {
  position: absolute;
  top: 3.5vh;
  margin: 0 auto;
  font-size: 100rpx;
  color: rgba(255, 255, 255, 1);
}

.content {
  display: flex;
  align-items: center;
  flex-direction: column;
}

@keyframes typing { from { width: 0; } }
@keyframes blink-caret { 50% { border-color: transparent; } }
.content-mainText {
  font: bold 200% Consolas, Monaco, monospace;
  border-right: .1em solid;
  width: 70%;
  white-space: nowrap;
  overflow: hidden;
  animation: 
    typing 1.5s steps(10, end),
    blink-caret .5s step-end infinite alternate;
}

@keyframes shiningDown { 
  from { 
    height: 0;
    transform: translateY(0)
  }

  to {
    transform: translateY(20px)
  }
}

.content-icon {
  margin: 0 auto;
  overflow: hidden;
  height: 100px;
  animation: shiningDown 1.2s steps(72, end) infinite;
}