/**index.wxss**/

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.container-image {
  height : 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
}

.content {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
  padding-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

@keyframes typing { from { width: 0; } }
@keyframes blink-caret { 50% { border-color: transparent; } }
.mainText {
  font: bold 200% Consolas, Monaco, monospace;
  border-right: .1em solid;
  width: 70%;
  white-space: nowrap;
  overflow: hidden;
  animation: 
    typing 1.5s steps(10, end),
    blink-caret .5s step-end infinite alternate;
}