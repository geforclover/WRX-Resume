/**index.wxss**/
.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.container-image {
  height : 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
}

.content {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}