/**index.wxss**/
.__mainColor{
  background-color: rgba(32,54,107,1);
}
.__secColor {
  background-color: rgba(255,251,203,1);
}

.container {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

@keyframes changeHeight {
  from { 
    border-bottom-left-radius: 50%;
    border-bottom-right-radius: 50%;
  }
}

.container-board {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  min-height: 25vh;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  overflow: hidden;
}

.container-board-up {
  height: 25vh!important;
  transition: height .5s;
}

.container-board-down {
  height: 100vh!important;
  border-bottom-left-radius: 0%;
  border-bottom-right-radius: 0%;
  animation: changeHeight .5s steps(30, end);
  transition: height 1s;
}

.container-line {
  margin: 0 auto;
  width: 1vw;
  height: 7vh;
}

.container-circle {
  margin: 0 auto;
  width: 3vw;
  height: 3vw;
  border-radius: 50%;
}

.container-board-title {
  font-size: 80rpx;
  color: rgba(255, 255, 255, 0.2);
}

.container-board-slogan {
  position: absolute;
  top: 3.5vh;
  margin: 0 auto;
  font-size: 100rpx;
  color: rgba(255, 255, 255, 1);
}

.container-block {
  width: 100vw;
  height: 0;
  margin-top: 10vh;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}

.container-block__back {
  transition: height .5s;
}

.container-block-splitLine {
  width: .5vw;
  height: 22vh;
}

.container-block-panel {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.container-block-panel:first-child {
  padding-right: 2vw;
  align-items: flex-end;
}

.container-block-panel:last-child {
  padding-left: 2vw;
  align-items: flex-start;
}

.container-block-text {
  font-size: 16px;
  color: #ffffff;
  margin-top: 1.5vh;
}

.transform-positive {
  transform: translateX(120%);
}
.transform-positiveRun {
  transition: transform .5s;
}
.transform-negative {
  transform: translateX(-120%);
}
.transform-negativeRun {
  transition: transform .5s;
}

@keyframes shiningDown { 
  from { 
    height: 0;
    transform: translateY(0)
  }

  to {
    transform: translateY(20px)
  }
}

.container-icon {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.container-icon-xiahua {
  margin: 0 auto;
  overflow: hidden;
  height: 100px;
  animation: shiningDown 1.2s steps(72, end) infinite;
}

@keyframes typing { from { width: 0; } }
@keyframes blink-caret { 50% { border-color: transparent; } }
.containert-mainText {
  position: fixed;
  bottom: 10vh;
  right: 2vw;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.containert-mainText-item {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  font: bold 200% Consolas, Monaco, monospace;
  color: #000000;
  border-right: .1em solid;
  text-align: right;
  padding-right: 2vw;
  margin-bottom: 2vh;
}

.containert-mainText-item:nth-child(1) {
  animation: 
    typing 1.5s steps(15, end),
    blink-caret .5s step-end infinite alternate;
}
.containert-mainText-item:nth-child(2) {
  animation: 
    typing 2.5s steps(15, end),
    blink-caret .5s step-end infinite alternate;
}
.containert-mainText-item:nth-child(3) {
  animation: 
    typing 4s steps(15, end),
    blink-caret .5s step-end infinite alternate;
}

.containert-mainText__color {
  color: #ffffff;
  transition: color 1.5s;
}